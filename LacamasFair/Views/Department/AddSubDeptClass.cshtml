@model SubDeptIdModel

@{
    ViewData["Title"] = "AddSubDeptClass";
    Layout = "/Views/Shared/_FairbookLayout.cshtml";
}

<h1>Add @Model.SubDeptName Class</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSubDeptClass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DepartmentId" value="@Model.DepartmentId" />
                <input type="hidden" asp-for="SubDeptName" value="@Model.SubDeptName" />
            <div class="form-group">
                <label asp-for="DeptClasses" class="control-label"></label>
                <input asp-for="DeptClasses" class="form-control" value="" />
                <span asp-validation-for="DeptClasses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Class" class="btn btn-primary" /> |
                <a asp-action="Home">Back To Department Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
